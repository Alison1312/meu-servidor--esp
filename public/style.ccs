body {
  font-family: Arial, sans-serif;
  text-align: center;
  padding: 2rem;
  background-color: #f2f2f2;
}

button {
  margin: 1rem;
  padding: 1rem 2rem;
  font-size: 1.2rem;
  border: none;
  border-radius: 8px;
  background-color: #007bff;
  color: white;
  cursor: pointer;
}

button:hover {
  background-color: #0056b3;
}
